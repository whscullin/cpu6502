root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 4

[*.ts]
indent_size = 2
quote_type = single

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 8

[*.s]
indent_style = tab
indent_size = 8
